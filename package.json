{
  "name": "rumors-fb-bot",
  "version": "0.1.0",
  "description": "FB bot that checks if a message contains internet rumor. A side project under Cofacts.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "node main.js",
    "lint": "eslint .",
    "build": "babel src -d build",
    "renew": "node build/renew.js",
    "i18n:init": "ttag init $LOCALE i18n/$LOCALE.po",
